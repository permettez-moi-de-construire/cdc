{
  "name": "@algar/cdc-db",
  "version": "0.0.1",
  "main": "src/index.ts",
  "author": "Cyril CHAPON <cyril@permettezmoideconstruire.fr>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src",
    "fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "generate": "dotenv -e ../../.env -- prisma generate",
    "reset": "dotenv -e ../../.env -- prisma migrate reset",
    "migrate": "dotenv -e ../../.env -- prisma migrate deploy",
    "migration:up": "dotenv -e ../../.env -- prisma migrate dev --create-only --name",
    "migration:down": "dotenv -e ../../.env -- prisma migrate diff --from-schema-datamodel prisma/schema.prisma --to-schema-datasource prisma/schema.prisma --script > down.sql",
    "dbq:prepare_": "yarn _dbq:create-repl && yarn _dbq:create-pub",
    "dbq:teardown_": "yarn _dbq:drop-pub && yarn _dbq:drop-repl",
    "dbq:prepare": "yarn _dbq:create-w2j-repl",
    "dbq:teardown": "yarn _dbq:drop-w2j-repl",
    "_dbq:create-repl": "dotenv -e ../../.env -- ts-node src/_scripts/create-repl",
    "_dbq:drop-repl": "dotenv -e ../../.env -- ts-node src/_scripts/drop-repl",
    "_dbq:create-w2j-repl": "dotenv -e ../../.env -- ts-node src/_scripts/create-w2j-repl",
    "_dbq:drop-w2j-repl": "dotenv -e ../../.env -- ts-node src/_scripts/drop-w2j-repl",
    "_dbq:create-w2j-ext": "dotenv -e ../../.env -- ts-node src/_scripts/create-w2j-ext",
    "_dbq:drop-w2j-ext": "dotenv -e ../../.env -- ts-node src/_scripts/drop-w2j-ext",
    "_dbq:create-pub": "dotenv -e ../../.env -- ts-node src/_scripts/create-pub",
    "_dbq:drop-pub": "dotenv -e ../../.env -- ts-node src/_scripts/drop-pub"
  },
  "dependencies": {
    "@prisma/client": "4.6.1",
    "chalk": "^4.1.2",
    "envalid": "^7.3.1",
    "prisma": "^4.6.1"
  },
  "devDependencies": {
    "@types/pg": "^8.6.5"
  }
}
